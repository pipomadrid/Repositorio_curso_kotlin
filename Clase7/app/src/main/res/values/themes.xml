<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!--SplashScreen-->
    <style name="Splash" parent = "Base.MyTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- Status bar-->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- booleano que nos indica si el fondo es ocsuro false o si es claro-->
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <!-- Navigation bar-->
        <item name="android:navigationBarColor">@color/transparent</item>
<!--        <item name="android:windowLightNavigationBar">true</item>-->
    </style>

    <style name="Base.MyTheme" parent="Base.MaterialThemeBuilder">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secundary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorError">@color/color_error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--Transiciones entre activitys-->

        <item name="android:windowEnterTransition">@transition/fade_in</item>
        <item name="android:windowExitTransition">@transition/fade_out</item>


    </style>

    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>
</resources>